# Assuming this is the starting point from Programming Exercise 3
class Restaurant:
    """A simple attempt to model a restaurant."""

    def __init__(self, restaurant_name, cuisine_type):
        """Initialize restaurant_name, cuisine_type, and number_served."""
        self.restaurant_name = restaurant_name
        self.cuisine_type = cuisine_type
        # 1. Add an attribute called number_served with a default value of 0.
        self.number_served = 0

    def describe_restaurant(self):
        """Print a nice summary of the restaurant."""
        print(f"The restaurant's name is {self.restaurant_name}.")
        print(f"The cuisine type is {self.cuisine_type}.")
        print(f"Customers served: {self.number_served}")

    def open_restaurant(self):
        """Simulate the restaurant opening."""
        print(f"{self.restaurant_name} is now open!")

    # 3. Add a method called set_number_served()
    def set_number_served(self, number):
        """Allow the user to set the number of customers served."""
        if number >= self.number_served:
            self.number_served = number
        else:
            print("You cannot set a number less than the current served count.")

    # 4. Add a method called increment_number_served()
    def increment_number_served(self, customers):
        """Allow the user to increment the number of customers served."""
        if customers > 0:
            self.number_served += customers
        else:
            print("The number of customers to increment must be positive.")

# --- Execution Steps ---

# 2. Create an instance called restaurant from this class.
my_restaurant = Restaurant('The Corner Bistro', 'French')

print("--- Initial State ---")
# Print the number of customers the restaurant has served
print(f"Initial customers served: {my_restaurant.number_served}") # Output: 0

# Change this value and print it again. (Direct modification)
my_restaurant.number_served = 25
print(f"Customers served after direct change: {my_restaurant.number_served}") # Output: 25

print("\n--- Using set_number_served() ---")
# Call set_number_served() with a new number and print the value again.
my_restaurant.set_number_served(50)
print(f"Customers served after using set_number_served(50): {my_restaurant.number_served}") # Output: 50

# Optional: Test setting a lower number
my_restaurant.set_number_served(10)

print("\n--- Using increment_number_served() ---")
# Call increment_number_served() with a number (e.g., customers served in a day).
customers_today = 12
my_restaurant.increment_number_served(customers_today)
print(f"Customers served after increment_number_served({customers_today}): {my_restaurant.number_served}") # Output: 62 (50 + 12)

# Final check
my_restaurant.describe_restaurant()