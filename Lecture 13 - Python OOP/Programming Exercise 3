class Restaurant:
    """Represents a restaurant with its name and cuisine type."""

    def __init__(self, restaurant_name, cuisine_type):
        """
        Initialize the restaurant's name and cuisine type attributes.
        """
        self.restaurant_name = restaurant_name
        self.cuisine_type = cuisine_type

    def describe_restaurant(self):
        """Prints a summary of the restaurant's name and cuisine type."""
        # Uses .title() for clean display regardless of input capitalization
        print(f"\nRestaurant Name: {self.restaurant_name.title()}")
        print(f"Cuisine Type: {self.cuisine_type.title()}")

    def open_restaurant(self):
        """Prints a message indicating that the restaurant is open."""
        print(f"\nThe restaurant, {self.restaurant_name.title()}, is now OPEN for business! Come on in.")

# ===============================================
# Create Instance and Call Methods
# ===============================================

# 1. Make an instance called 'restaurant' from your class.
restaurant = Restaurant('Taste of India', 'Indian')

# 2. Print the two attributes individually.
print("--- Step 1: Printing Attributes Individually ---")
print(f"Name Attribute: {restaurant.restaurant_name}")
print(f"Cuisine Attribute: {restaurant.cuisine_type}")

# 3. Call both methods.
print("\n--- Step 2: Calling Class Methods ---")
restaurant.describe_restaurant()
restaurant.open_restaurant()