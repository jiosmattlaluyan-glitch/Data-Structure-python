class User:
    """Represents a user profile with personal information and login tracking."""

    def __init__(self, first_name, last_name, username, email, location='Unknown'):
        """
        Initialize the user attributes.
        We initialize login_attempts to 0.
        """
        self.first_name = first_name
        self.last_name = last_name
        self.username = username
        self.email = email
        self.location = location
        # Attribute required for this exercise:
        self.login_attempts = 0 
        self.is_active = True

    def describe_user(self):
        """Prints a summary of the user's information."""
        full_name = f"{self.first_name} {self.last_name}"
        print("\n--- User Profile Summary ---")
        print(f"Full Name: {full_name.title()}")
        print(f"Username: {self.username}")
        print(f"Login Attempts: {self.login_attempts}")
        print("----------------------------")

    def greet_user(self):
        """Prints a personalized greeting to the user."""
        print(f"\nHello, {self.first_name.title()}! Welcome back.")

    # Method required for this exercise:
    def increment_login_attempts(self):
        """Increments the value of login_attempts by 1."""
        self.login_attempts += 1
        print(f"-> Login attempt recorded. Current attempts: {self.login_attempts}")
    
    # Method required for this exercise:
    def reset_login_attempts(self):
        """Resets the value of login_attempts to 0."""
        self.login_attempts = 0
        print("-> Login attempts have been successfully **reset**.")


# ===============================================
# Demonstration of Exercise Requirements
# ===============================================

# 1. Make an instance of the User class.
user_demo = User('Chris', 'Bacon', 'cbacon', 'chris.bacon@example.com')

print("--- Starting Login Attempt Demonstration ---")

# Print the initial value of login_attempts
print(f"Initial login attempts for {user_demo.username}: {user_demo.login_attempts}")

# 2. Call increment_login_attempts() several times.
print("\nSimulating failed logins...")
user_demo.increment_login_attempts() # 1
user_demo.increment_login_attempts() # 2
user_demo.increment_login_attempts() # 3
user_demo.increment_login_attempts() # 4

# Print the value after several increments
print(f"\nValue of login_attempts after increments: {user_demo.login_attempts}")

# 3. Call reset_login_attempts()
print("\nSimulating successful login (resetting attempts)...")
user_demo.reset_login_attempts()

# 4. Print the value of login_attempts to make sure it reset to 0.
print(f"\nFinal value of login_attempts after reset: {user_demo.login_attempts}")

print("--- Demonstration Complete ---")